<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"

    xmlns:card_view="http://schemas.android.com/apk/res-auto"
    android:orientation="vertical"
    android:layout_width="match_parent"
    android:layout_height="wrap_content">
    <android.support.v7.widget.CardView
        android:layout_width="match_parent"
        card_view:cardCornerRadius="10dp"
        card_view:cardElevation="0.01dp"
        card_view:cardUseCompatPadding="true"

        card_view:cardPreventCornerOverlap="false"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/grid_home_layout"



            android:layout_height="100dp">

            <ImageView
                android:layout_width="match_parent"
                android:src="@drawable/user_f"
                android:scaleType="centerCrop"

                android:id="@+id/imagegridhome"


                android:layout_height="match_parent" />
            <TextView
                android:layout_width="match_parent"
                android:gravity="center"
                android:layout_centerHorizontal="true"
                android:textColor="@color/white"
                style="@style/Text"

                android:layout_alignParentBottom="true"
                android:layout_marginBottom="8dp"
                android:id="@+id/textView_grid_home"
                android:layout_height="wrap_content" />
            <ImageView
                android:layout_width="30dp"
                android:src="@drawable/green"
                android:id="@+id/imageOnline"

                android:layout_height="30dp" />
            <LinearLayout
                android:id="@+id/badgecontainer"
                android:visibility="gone"

                android:layout_width="wrap_content"
                android:layout_marginTop="6dp"
                android:layout_height="16dp"
                android:layout_alignParentRight="true"
                android:layout_marginRight="5dp"
                android:backgroundTint="@color/dark_slate_blue"
                android:background="@drawable/notification_background"
                android:gravity="center"
                android:minWidth="16dp"
                >

                <TextView
                    android:id="@+id/badgetext"
                    android:layout_width="wrap_content"
                    android:layout_height="wrap_content"
                    android:textAlignment="center"
                    android:text=""
                    android:textColor="#fff"
                    android:textSize="10sp" />
            </LinearLayout>
        </RelativeLayout>


    </android.support.v7.widget.CardView>

</LinearLayout>