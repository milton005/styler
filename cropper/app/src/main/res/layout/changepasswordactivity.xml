<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:background="@drawable/bg_splash"
        android:alpha=".3"
        android:layout_height="match_parent">

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/layout"
            android:layout_height="40dp">
            <ImageView
                android:layout_width="wrap_content"
                android:layout_marginLeft="10dp"
                android:layout_centerVertical="true"
                android:id="@+id/back"
                android:src="@drawable/ic_action_back"
                android:layout_height="wrap_content"
                />
            <TextView
                android:layout_width="wrap_content"
                android:gravity="center"
                android:textColor="@color/black"
                android:id="@+id/text_head_changepassword"
                android:textSize="17dp"
                android:text="Change Password"

                android:layout_height="match_parent"
                android:layout_alignParentTop="true"
                android:layout_centerHorizontal="true" />


        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_below="@id/layout"
            android:layout_marginTop="30dp"
            android:layout_marginLeft="30dp"
            android:layout_marginRight="30dp"
            android:layout_height="wrap_content">
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/layout1"
                android:orientation="vertical"
                android:layout_height="wrap_content">
                <TextView
                    android:layout_width="match_parent"
                    android:text="Old password:"

                    android:id="@+id/text_old_password"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/view_rectangle_border"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_margin="1dp"

                        android:background="@color/white"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/editold_passord"
                            android:background="@android:color/transparent"
                            android:inputType="textPassword"
                            android:textColor="@color/black"
                            android:paddingLeft="10dp"
                            android:hint=""


                            android:minHeight="50dp"
                            android:layout_height="wrap_content" />
                        <!--<com.mindbees.stylerapp.UTILS.MultiSpinner-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_margin="5sp"-->
                        <!--android:id="@+id/spinDesigner"-->
                        <!--android:layout_height="match_parent">-->

                        <!--</com.mindbees.stylerapp.UTILS.MultiSpinner>-->

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_margin="1dp"
                        android:id="@+id/erroroldpassword"
                        android:visibility="gone"



                        android:background="@color/thistle"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:paddingLeft="5dp"
                            android:id="@+id/erroroldpasswordtext"
                            android:textSize="11dp"
                            android:text="Please enter your old password"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_width="30dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/alert"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_height="30dp" />

                    </RelativeLayout>
                    </RelativeLayout>

            </LinearLayout>


            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/layout2"
                android:layout_marginTop="10dp"
                android:orientation="vertical"
                android:layout_height="wrap_content"
                android:layout_below="@+id/layout1"
                android:layout_alignParentStart="true">
                <TextView
                    android:layout_width="match_parent"
                    android:text="New password:"
                    android:id="@+id/text_new_password"
                    android:textSize="16dp"
                    android:textColor="@color/black"
                    android:layout_height="wrap_content" />
                <RelativeLayout
                    android:layout_width="match_parent"
                    android:layout_marginTop="10dp"
                    android:background="@drawable/view_rectangle_border"
                    android:layout_height="wrap_content">

                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:background="@color/white"
                        android:layout_margin="1dp"
                        android:layout_height="wrap_content">
                        <EditText
                            android:layout_width="match_parent"
                            android:id="@+id/editnew_password"
                            android:background="@android:color/transparent"
                            android:inputType="textPassword"
                            android:textColor="@color/black"
                            android:paddingLeft="10dp"
                            android:hint=""

                            android:minHeight="50dp"
                            android:layout_height="wrap_content" />
                        <!--<com.mindbees.stylerapp.UTILS.MultiSpinner-->
                        <!--android:layout_width="match_parent"-->
                        <!--android:layout_margin="5sp"-->
                        <!--android:id="@+id/spinStyleIcons"-->
                        <!--android:layout_height="match_parent">-->

                        <!--</com.mindbees.stylerapp.UTILS.MultiSpinner>-->

                    </RelativeLayout>
                    <RelativeLayout
                        android:layout_width="match_parent"
                        android:layout_margin="1dp"
                        android:id="@+id/errornewpassword"
                        android:visibility="gone"


                        android:background="@color/thistle"
                        android:layout_height="50dp">
                        <TextView
                            android:layout_width="wrap_content"
                            android:paddingLeft="5dp"
                            android:id="@+id/textViewerrornewpassword"
                            android:textSize="11dp"
                            android:text="Please enter your new password"
                            android:textColor="@color/white"
                            android:layout_height="wrap_content" />
                        <ImageView
                            android:layout_width="30dp"
                            android:paddingRight="10dp"
                            android:src="@drawable/alert"
                            android:layout_alignParentRight="true"
                            android:layout_centerVertical="true"
                            android:layout_height="30dp" />

                    </RelativeLayout>
                    </RelativeLayout>

            </LinearLayout>
            <LinearLayout
                android:layout_width="match_parent"
                android:id="@+id/layoutsave"
                android:layout_marginTop="20dp"
                android:layout_below="@+id/layout2"
                android:orientation="vertical"
                android:background="@color/dark_lates_gray"
                android:layout_height="50dp">
                <TextView
                    android:layout_width="match_parent"
                    android:text="SAVE NOW"
                    android:id="@+id/save"
                    android:gravity="center"
                    android:textColor="@color/white"
                    android:textSize="17dp"
                    android:layout_height="match_parent" />
            </LinearLayout>

        </RelativeLayout>

    </RelativeLayout>
</RelativeLayout>