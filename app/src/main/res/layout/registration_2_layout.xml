<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    android:orientation="vertical" android:layout_width="match_parent"
    android:background="@drawable/bg_splash"
    android:layout_height="match_parent">
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/logolayout"

        android:layout_height="wrap_content">
        <ImageView
            android:layout_width="200dp"
            android:layout_centerInParent="true"
            android:src="@drawable/logo1"

            android:layout_height="80dp" />


    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:layout_below="@+id/logolayout"
        android:layout_marginTop="10dp"
        android:layout_marginRight="20dp"
        android:layout_marginLeft="20dp"
        android:background="@color/grey_white"
        android:layout_height="wrap_content">
        <RelativeLayout
            android:layout_width="match_parent"
            android:id="@+id/tribe_image_layout"
            android:layout_height="200dp">
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/placeHolder"
                android:src="@drawable/bg_register_2"
                android:scaleType="fitXY"
                android:layout_height="match_parent" />
            <ImageView
                android:layout_width="match_parent"
                android:id="@+id/image_tribes"
                android:scaleType="fitXY"
                android:layout_margin="10dp"
                android:layout_height="match_parent" />
        </RelativeLayout>
        <RelativeLayout
            android:layout_width="match_parent"
            android:layout_marginTop="10dp"
            android:layout_marginRight="10dp"
            android:layout_marginLeft="10dp"
            android:layout_marginBottom="30dp"
            android:layout_below="@+id/tribe_image_layout"
            android:layout_height="50dp">
            <android.support.v7.widget.AppCompatSpinner
                android:layout_width="match_parent"
                android:layout_height="match_parent"

                android:id="@+id/spinnertribes"
                android:ems="10"

                android:overlapAnchor="false"
                style="@style/spinner_style"
                android:dropDownWidth="match_parent"
                android:singleLine="true"
                android:spinnerMode="dropdown"
                android:dropDownSelector="@drawable/list_selector"
                android:textColor="@color/black"
                >

            </android.support.v7.widget.AppCompatSpinner>
            <ImageView
                android:layout_width="match_parent"
                android:layout_alignParentBottom="true"
                android:background="@color/black"

                android:layout_height="1dp" />

        </RelativeLayout>

    </RelativeLayout>
    <RelativeLayout
        android:layout_width="match_parent"
        android:id="@+id/nextButton"
        android:layout_alignParentBottom="true"
        android:layout_height="80dp">
        <ImageView
            android:layout_width="wrap_content"
            android:layout_centerInParent="true"
            android:id="@+id/register_next"
            android:src="@drawable/ic_register_next"
            android:layout_height="wrap_content" />

    </RelativeLayout>
</RelativeLayout>